# Enable HTTPS redirection
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://afipskii-hram.ru/$1 [L,R=301]

# Force www to non-www (or vice versa)
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www\.afipskii-hram\.ru [NC]
RewriteRule ^(.*)$ https://afipskii-hram.ru/$1 [L,R=301]

# Security headers
<IfModule mod_headers.c>
    # Protect against XSS attacks
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME-type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Enable HSTS (prevents man-in-the-middle attacks)
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Disable directory listing
Options -Indexes

# Disable server signature
ServerSignature Off

# Protect files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Disable access to sensitive files
<FilesMatch "(\.htaccess|\.htpasswd|\.ini|\.php|\.fla|\.psd)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block common malicious requests
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK)
    RewriteRule .* - [F]
</IfModule>

# Disable PHP execution in certain directories
<IfModule mod_php.c>
    php_flag engine off
</IfModule>

# Set character set
AddDefaultCharset UTF-8

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache control
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>
